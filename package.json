{
  "name": "",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "test": "echo \"Error: no test speciﬁed\" && exit 1",
    "clean": "del .DS_Store npm-debug.log dist",
    "mkdir": "mkdir dist dist/assets dist/assets/styles dist/assets/scripts",
    "ejs": "ejs-cli -b workspace/pages \"**/*.ejs\" -o dist",
    "watch:ejs": "watch 'npm run ejs' workspace/pages/",
    "sass": "node-sass --include-path --source-map dist/assets/styles/ -o dist/assets/styles/ workspace/assets/styles/",
    "autoprefixer": "postcss --use autoprefixer dist/assets/styles/style.css -d dist/assets/styles",
    "uglifycss": "uglifycss dist/assets/styles/style.css > dist/assets/styles/style.min.css",
    "watch:sass": "watch 'npm run sass && npm run autoprefixer' workspace/assets/styles/",
    "browserify": "browserify workspace/assets/scripts/common.js --debug -t babelify | exorcist dist/assets/scripts/bundle.js.map > dist/assets/scripts/bundle.js",
    "uglifyjs": "uglifyjs dist/assets/scripts/bundle.js > dist/assets/scripts/bundle.min.js",
    "watch:browserify": "watch 'npm run browserify' workspace/assets/scripts/",
    "transport": "cpx workspace/assets/images/**/* dist/assets/images",
    "prepare": "npm run clean && npm run mkdir",
    "build": "npm run prepare && (npm run ejs & (npm run sass && npm run autoprefixer) & npm run browserify & npm run transport)",
    "build:production": "npm run build && (npm run uglifycss & npm run uglifyjs)",
    "watch": "npm run prepare && (npm run watch:ejs & npm run watch:sass & npm run watch:browserify)",
    "start": "npm run watch"
  },
  "author": "kyoyababa",
  "license": "MIT",
  "dependencies": {
    "autoprefixer": "^6.7.0",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^13.3.0",
    "bundle": "^0.2.3",
    "cpx": "^1.5.0",
    "del": "^2.2.2",
    "del-cli": "^0.2.1",
    "ejs-cli": "^2.0.0",
    "exorcist": "^0.4.0",
    "jquery": "^3.1.1",
    "node-sass": "^4.3.0",
    "nodemon": "^1.11.0",
    "postcss-cli": "^2.6.0",
    "sourcemap": "^0.1.0",
    "uglify-js": "^2.7.5",
    "uglifycss": "0.0.25",
    "watch": "^1.0.1"
  }
}
